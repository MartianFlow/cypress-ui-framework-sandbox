# =================================
# Cypress UI Framework Environment Variables
# =================================
# Copy this file to .env and fill in the values
# NEVER commit .env files with real credentials

# =================================
# Environment Selection
# =================================
# Options: dev, qa, staging, prod
CYPRESS_ENV=dev

# =================================
# Application URLs
# =================================
CYPRESS_BASE_URL=https://example.com
CYPRESS_API_URL=https://api.example.com

# =================================
# Test User Credentials
# =================================
# Standard test user
CYPRESS_TEST_USER_EMAIL=testuser@example.com
CYPRESS_TEST_USER_PASSWORD=SecurePassword123!

# Admin test user
CYPRESS_ADMIN_USER_EMAIL=admin@example.com
CYPRESS_ADMIN_USER_PASSWORD=AdminPassword123!

# =================================
# API Keys & Tokens
# =================================
CYPRESS_API_KEY=your-api-key-here
CYPRESS_AUTH_TOKEN=your-auth-token-here

# =================================
# Cypress Dashboard (Optional)
# =================================
# For recording to Cypress Cloud
CYPRESS_RECORD_KEY=your-record-key-here
CYPRESS_PROJECT_ID=your-project-id

# =================================
# Feature Flags
# =================================
CYPRESS_ENABLE_VIDEO=true
CYPRESS_ENABLE_SCREENSHOTS=true
CYPRESS_ENABLE_RETRIES=true

# =================================
# Allure Reporting (Optional)
# =================================
ALLURE_RESULTS_PATH=cypress/reports/allure-results

# =================================
# Timeouts (milliseconds)
# =================================
CYPRESS_DEFAULT_COMMAND_TIMEOUT=10000
CYPRESS_PAGE_LOAD_TIMEOUT=60000
CYPRESS_REQUEST_TIMEOUT=30000
